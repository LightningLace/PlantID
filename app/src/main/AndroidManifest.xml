            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.alacey.plantid.wildflower" />
        </activity>
        <activity
            android:name=".irregular"
            android:label="@string/title_activity_irregular"
            android:parentActivityName=".wildflower" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.alacey.plantid.wildflower" />
        </activity>
        <activity
            android:name=".DatabaseController"
            android:label="@string/title_activity_database_controller"
            android:parentActivityName=".beginID" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.alacey.plantid.beginID" />
        </activity>
    </application>

</manifest>
