            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.alacey.plantid.beginID" />
        </activity>
        <activity
            android:name=".opposite"
            android:label="@string/title_activity_opposite"
            android:parentActivityName=".beginTree" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.alacey.plantid.beginTree" />
        </activity>
        <activity
            android:name=".alternate"
            android:label="@string/title_activity_alternate"
            android:parentActivityName=".beginTree" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.alacey.plantid.beginTree" />
        </activity>
        <activity
            android:name=".wildflower"
            android:label="@string/title_activity_wildflower"
            android:parentActivityName=".beginFlower" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.alacey.plantid.beginFlower" />
        </activity>
        <activity
            android:name=".regular"
            android:label="@string/title_activity_regular"
